<html>
<head>
  <title>Composure</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>
  <script type="text/javascript">
    window.CLOUDINARY_SETTINGS = {
      "cloud_name": "<%= ENV['CLOUD_NAME'] %>",
      "upload_preset": "<%= ENV['UPLOAD_PRESET'] %>",
      "stylesheet": "<%= asset_url 'cloudinary_minimal.css' %>",
      "client_allowed_formats": ["png","gif", "jpeg"],
      "max_file_size": 50000000
    };
    window.CLOUDINARY_AVATAR = {
      "cloud_name": "<%= ENV['CLOUD_NAME'] %>",
      "upload_preset": "<%= ENV['UPLOAD_AVATAR_PRESET'] %>",
      "stylesheet": "<%= asset_url 'cloudinary_minimal.css' %>",
      "client_allowed_formats": ["png","gif", "jpeg"],
      "max_file_size": 50000000
    };
  </script>
  <link rel="shortcut icon" href="https://oceanus.feralhosting.com/bx1th0j/assets/logo.png" />
</head>
